<% layout("/layout/boilerplate") %>

    <style>
        .filter {
            text-align: center;
        }
        
        .outer-filter {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .f-icon {
            margin-left: 2rem;
        }
        
        .n-filter {
            background-color: white;
        }
    </style>

    <body>

        <div class="outer-filter">
            <nav class="navbar navbar-expand-lg  n-filter">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav filters">
                            <li class="nav-item f-icon">
                                <a class="nav-link " aria-current="page" href="">
                                    <div class="filter">
                                        <i class="fa-solid fa-fire"></i>
                                        <div>trending</div>
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item f-icon ">
                                <a class="nav-link" href="">
                                    <div class="filter"><i class="fa-solid fa-snowflake"></i>
                                        <div>arctic</div>
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item f-icon">
                                <a class="nav-link" href="#">
                                    <div class="filter"><i class="fa-solid fa-mountain-city"></i>
                                        <div>top cities</div>
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item f-icon ">
                                <a class="nav-link ">
                                    <div class="filter"><i class="fa-solid fa-ship"></i>
                                        <div>boating</div>
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item f-icon ">
                                <div class="filter">
                                    <a class="nav-link ">
                                        <i class="fa-solid fa-cow"></i>
                                        <div>farm</div>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item f-icon ">
                                <div class="filter">
                                    <a class="nav-link ">
                                        <i class="fa-solid fa-igloo"></i>
                                        <div>dome</div>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item f-icon ">
                                <div class="filter">
                                    <a class="nav-link ">
                                        <i class="fa-solid fa-water-ladder"></i>
                                        <div>pool</div>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display total before taxes
                </label>
            </div>
        </div>



        <div class="cards row row-col-lg-3 row-col-md-2 ">

            <% for(let data of allListing){ %>
                <div class="card listing-card " style="width: 19rem; height:27rem;">
                    <a href="/listing/<%= data.id %>" class="card-link">
                        <img src="<%= data.image.url %>" class="card-img-top" alt="listing_image">
                    <div class="card-body">
                        <p class="card-text">
                            <b> <%= data.title %></b>
                        </p>
                        <p class="card-text">
                            &#8377;
                            <%= data.price %> &nbsp; &nbsp;<i>+18 GST</i>
                        </p>
                    </div>
                    </a>
                </div>

                <% } %>
        </div>

        <script>
            let button = document.querySelector("#flexSwitchCheckReverse");

            button.addEventListener("click", () => {

            })
        </script>
    </body>